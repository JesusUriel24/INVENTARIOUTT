        <script>
            var docentesPorEspecialidad = JSON.parse('<%- docentesPorEspecialidadJSON %>');
            document.getElementById("especialidadSelect").addEventListener("change", function() {
                var especialidadSeleccionada = this.value;
                var docentes = docentesPorEspecialidad[especialidadSeleccionada];
                var docenteSelect = document.getElementById("docenteSelect");
                
                // Limpiar opciones anteriores
                docenteSelect.innerHTML = "";
                
                // Agregar las opciones de docente correspondientes a la especialidad seleccionada
                docentes.forEach(function(docente) {
                    var option = document.createElement("option");
                    option.text = docente;
                    option.value = docente;
                    docenteSelect.add(option);
                });
            });
        </script>



        
